{% extends 'base.jinja2' %}

{% block subtitle %}Donation Add{% endblock subtitle %}

{% block content %}
    <h3>Add Donation</h3>
    <form method="post" action="{{ url_for('donation_add') }}">

        <div class="input-group">
            <label for="code">Code: </label>
            <input type="text" id="code" name="code" value="{{donor.code}}" readonly>
        </div>

        <div class="input-group">
            <label for="first_name">First Name: </label>
            <input type="text" id="first_name" name="first_name" value="{{donor.first_name}}" readonly>
        </div>

        <div class="input-group">
            <label for="last_name">Last Name: </label>
            <input type="text" id="last_name" name="last_name" value="{{donor.last_name}}" readonly>
        </div>

        <div class="input-group">
            <label for="donation">Donation: </label>
            <input type="text" id="donation" name="donation" value="">
        </div>

        <input type="submit" value="Add Donation">

    </form>
{% endblock content %}